<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GUI"
    android:background="@drawable/image2" >
<EditText 
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:textStyle="bold"
    android:layout_marginTop="50dp"
    android:textSize="30sp"
    android:inputType="numberDecimal"
    android:id="@+id/tbox"/>
<Button 
    android:id="@+id/bt9"
    
    android:layout_width="70dp"
    android:layout_height="50dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_below="@+id/tbox"
    android:text="9"/>
<Button
    android:id="@+id/bt8"
    android:layout_width="70dp"
    android:layout_height="50dp"
    android:text="8" 
    android:layout_marginTop="10dp"
    android:layout_below="@+id/tbox"
    android:layout_toRightOf="@+id/bt9" />
<Button
    android:id="@+id/bt7"
    android:layout_width="70dp"
    android:layout_height="50dp"
    android:text="7"
    android:layout_marginTop="10dp"
    android:layout_below="@+id/tbox"
    android:layout_toRightOf="@+id/bt8" />
<Button
    android:id="@+id/bt6"
    android:layout_width="70dp"
    android:layout_height="50dp"
    android:text="6"
    android:layout_marginTop="10dp"
    android:layout_below="@+id/tbox"
    android:layout_toRightOf="@+id/bt7" />
<Button
    android:id="@+id/bt5"
    android:layout_width="70dp"
    android:layout_height="50dp"
    android:text="5"
    android:layout_marginTop="5dp"
    android:layout_below="@+id/bt9"
    android:layout_marginLeft="20dp" />
<Button
    android:id="@+id/bt4"
    android:layout_width="70dp"
    android:layout_height="50dp"
    android:text="4"
    android:layout_marginTop="5dp"
    android:layout_below="@+id/bt8"
    android:layout_toRightOf="@+id/bt5" />
<Button
    android:id="@+id/bt3"
    android:layout_width="70dp"
    android:layout_height="50dp"
    android:text="3"
    android:layout_marginTop="5dp"
    android:layout_below="@+id/bt7"
    android:layout_toRightOf="@+id/bt4" />
<Button
    android:id="@+id/bt2"
    android:layout_width="70dp"
    android:layout_height="50dp"
    android:text="2"
    android:layout_marginTop="5dp"
    android:layout_below="@+id/bt6"
    android:layout_toRightOf="@+id/bt3" />
<Button
    android:id="@+id/bt1"
    android:layout_width="70dp"
    android:layout_height="50dp"
    android:text="1"
    android:layout_marginTop="5dp"
    android:layout_below="@+id/bt5"
    android:layout_marginLeft="20dp" />
<Button
    android:id="@+id/bt0"
    android:layout_width="70dp"
    android:layout_height="50dp"
    android:text="0"
    android:layout_marginTop="5dp"
    android:layout_below="@+id/bt4"
    android:layout_toRightOf="@+id/bt1" />
<Button
    android:id="@+id/bd"
    android:layout_width="70dp"
    android:layout_height="50dp"
    android:text="."
    android:layout_marginTop="5dp"
    android:layout_below="@+id/bt3"
    android:layout_toRightOf="@+id/bt0" />
<Button
    android:id="@+id/ba"
    android:layout_width="70dp"
    android:layout_height="106dp"
    android:text="+"
    android:layout_marginTop="5dp"
    android:layout_below="@+id/bt2"
    android:layout_toRightOf="@+id/bd" />
<Button
    android:id="@+id/bs"
    android:layout_width="70dp"
    android:layout_height="50dp"
    android:text="-"
    android:layout_marginTop="5dp"
    android:layout_below="@+id/bt1"
    android:layout_marginLeft="20dp" />
<Button
    android:id="@+id/bx"
    android:layout_width="70dp"
    android:layout_height="50dp"
    android:text="x"
    android:layout_marginTop="5dp"
    android:layout_below="@+id/bt0"
    android:layout_toRightOf="@+id/bs" />
<Button
    android:id="@+id/bv"
    android:layout_width="70dp"
    android:layout_height="50dp"
    android:text="/"
    android:layout_marginTop="5dp"
    android:layout_below="@+id/bd"
    android:layout_toRightOf="@+id/bx" />
<Button
    android:id="@+id/be"
    android:layout_width="135dp"
    android:layout_height="50dp"
    android:text="="
    android:layout_marginTop="5dp"
    android:layout_below="@+id/bs"
    android:layout_marginLeft="20dp" />
<Button 
    android:id="@+id/clr"
    android:layout_width="135dp"
    android:layout_height="50dp"
    android:text="Clear"
    android:layout_toRightOf="@+id/be"
    android:layout_below="@+id/bv"
    android:layout_marginTop="5dp"
   
    />
</RelativeLayout>